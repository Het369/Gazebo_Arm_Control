<launch>
    <!-- these are the arguments you can pass this launch file, for example paused:=true -->
	<arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>

    <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find imr_arm_gazebo)/worlds/imr_arm.world"/>
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

	<arg name="model1" default="$(find imr_arm_description)/urdf/imr_arm_gazebo.urdf"/>
    <arg name="model2" default="$(find imr_arm_description)/urdf/imr_arm_gazebo2.urdf"/>
	<!-- <arg name="gui" default="true" /> -->
    <arg name="rvizconfig" default="$(find imr_arm_description)/rviz/imr_arm_gazebo.rviz" />

    <!-- Load the URDF into the ROS Parameter Server -->
	<param name="robot_description" textfile="$(find imr_arm_description)/urdf/imr_arm_gazebo.urdf" />
    
	<param name="use_gui" value="$(arg gui)"/>
    <param name="use_sim_time" type="bool" value="false"/>

    <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
    <node name="imr_arm1" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-x 1 -urdf -model imr_arm1 -param robot_description1"/>

    <param name="robot_description" textfile="$(find imr_arm_description)/urdf/imr_arm_gazebo2.urdf" />

    <node name="imr_arm2" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-x -1 -urdf -model imr_arm2 -param robot_description2"/>
    
    <!-- ros_control IMR launch file -->
    <include file="$(find imr_arm_control)/launch/imr_arm_control2.launch" />
</launch>
